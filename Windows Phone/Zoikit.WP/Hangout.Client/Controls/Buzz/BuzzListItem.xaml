                					<Path.RenderTransform>
                						<CompositeTransform Rotation="-1" SkewX="-1" ScaleX="-1" TranslateX="1"/>
                					</Path.RenderTransform>
                				</Path>
                                <Path toolkit:TiltEffect.SuppressTilt="True" Stretch="Fill" Fill="{StaticResource BlueBrush}" Data="F1 M 108.111,131.47L 161.831,131.47L 162.502,238.931L 268.599,239.602L 269.27,292.661L 162.502,292.661L 160.488,398.779L 108.111,400.793L 108.111,292.661L 1.34299,292.661L 3.85128e-006,240.274L 108.111,240.274L 108.111,131.47 Z " UseLayoutRounding="False" Stroke="#FFFFAF04" Margin="23.75,11.25,14.25,18.75" Width="20" Height="20" StrokeThickness="2"/>
