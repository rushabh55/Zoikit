                			<Grid toolkit:TiltEffect.SuppressTilt="True" x:Name="UnfollowBtn" Height="50" Width="73" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,17,0" Tap="UnfollowBtn_Tap" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed" Opacity="0">
                				<Grid.RenderTransform>
                					<CompositeTransform ScaleX="-1"/>
                				</Grid.RenderTransform>
                                <Path toolkit:TiltEffect.SuppressTilt="True" Stretch="Fill" Fill="{StaticResource YellowBrush}" Data="F1 M 350.645,382.537L 195.997,313.212C 195.997,313.212 70.0131,281.883 62.6807,183.229C 55.3482,84.5743 168.001,33.2473 183.332,35.9137C 198.664,38.5801 297.985,0.584747 381.307,74.5756C 464.63,148.566 417.97,244.554 377.975,271.218C 337.979,297.881 305.317,308.546 299.318,309.879C 293.318,311.213 353.978,361.206 353.978,361.206C 353.978,361.206 364.839,368.682 357.977,377.871C 354.29,382.808 350.922,382.815 350.645,382.537 Z " Margin="0" UseLayoutRounding="False" StrokeThickness="2" Width="44" Height="44"/>
                                <Path toolkit:TiltEffect.SuppressTilt="True" Stretch="Fill" Fill="{StaticResource BlueBrush}" Data="F1 M 108.111,131.47L 161.831,131.47L 162.502,238.931L 268.599,239.602L 269.27,292.661L 162.502,292.661L 160.488,398.779L 108.111,400.793L 108.111,292.661L 1.34299,292.661L 3.85128e-006,240.274L 108.111,240.274L 108.111,131.47 Z " UseLayoutRounding="False" StrokeThickness="2" Margin="26.5,11.66,26.5,18.339" Width="20" Height="20"/>
                			</Grid>
                		</Grid>
                	</StackPanel>
                    <StackPanel toolkit:TiltEffect.SuppressTilt="True" Margin="10,0,0,0" Orientation="Horizontal">
    					<Image x:Name="ProfilePic" Height="100" Width="100" Source="YellowRect.png"/>
                        <TextBlock toolkit:TiltEffect.SuppressTilt="True" x:Name="BuzzLBL" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Anyone wants to grab a beer?" VerticalAlignment="Top" FontSize="26.667" Width="331" Margin="9,0,0,0"/>
    				</StackPanel>
                    <StackPanel toolkit:TiltEffect.SuppressTilt="True" x:Name="VenueSP" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,8,0,0">
                        <Image toolkit:TiltEffect.SuppressTilt="True" Height="34" Source="/Images/Appbar/Venue.png" Stretch="Fill" Width="30" Margin="5,0,0,0"/>
                        <TextBlock toolkit:TiltEffect.SuppressTilt="True" x:Name="VenueNameLBL" HorizontalAlignment="Center" TextWrapping="Wrap" Text=" City Center Mall" VerticalAlignment="Center" FontSize="24" Width="415" FontWeight="Bold" Margin="0"/>
    				</StackPanel>
                    <StackPanel toolkit:TiltEffect.SuppressTilt="True" x:Name="TimeSP" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Orientation="Horizontal" Width="450">
                        <Image toolkit:TiltEffect.SuppressTilt="True" Margin="0" Source="/Images/ClockPic.png" Stretch="Fill" Height="45" Width="45" HorizontalAlignment="Left"/>
                        <TextBlock toolkit:TiltEffect.SuppressTilt="True" x:Name="TimeLBL" HorizontalAlignment="Center" TextWrapping="Wrap" Text="10:00 PM" VerticalAlignment="Center" FontSize="24"  Width="405" FontWeight="Bold" Margin="0,0,2,0"/>
    				</StackPanel>
                    <TextBlock toolkit:TiltEffect.SuppressTilt="True" x:Name="PeopleFollowingLBL" HorizontalAlignment="Left" TextWrapping="Wrap" Text="2 PEOPLE FOLLOWING " VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Foreground="{StaticResource GreyBrush}" FontSize="21.333" FontFamily="Segoe UI" Margin="10,0,0,0" Width="440" FontWeight="Bold">
    					<TextBlock.RenderTransform>
    						<CompositeTransform SkewY="-0.293" TranslateY="-0.995"/>
    					</TextBlock.RenderTransform>
    				</TextBlock>
                    <TextBlock toolkit:TiltEffect.SuppressTilt="True" x:Name="postedLBL" TextWrapping="Wrap" Text="posted 10 min ago" FontSize="16" Foreground="{StaticResource GreyBrush}" FontStyle="Italic" TextAlignment="Right"/>
    			</StackPanel>
    		</StackPanel>
    	</StackPanel>
    </Grid>
</UserControl>