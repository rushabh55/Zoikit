    				<TextBlock x:Name="VenueName" Text="{Binding Name}" FontSize="29.333" Margin="9,3,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Height="39"/>
    				<TextBlock x:Name="VenueAddress" Text="{Binding Location.Address}" FontSize="21.333" Foreground="{StaticResource GreyBrush}" Margin="9,3,0,0" HorizontalAlignment="Left"/>
                    <Canvas Margin="-72,22,-150,0" Height="36" Width="480" toolkit:TiltEffect.SuppressTilt="True">
    					<Rectangle Fill="{StaticResource YellowBrush}" Height="35" Width="480"/>
