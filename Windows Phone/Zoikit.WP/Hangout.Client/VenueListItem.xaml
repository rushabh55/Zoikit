    						<StackPanel.RenderTransform>
    							<CompositeTransform/>
    						</StackPanel.RenderTransform>
    						<TextBlock x:Name="StatusLB"  Text="SampleText" FontSize="22.667" Foreground="#FF000C1B" TextAlignment="Center" Height="28" FontWeight="Bold" Width="480"/>
