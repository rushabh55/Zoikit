<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Tag="clr-namespace:Hangout.Client.Controls.Tag" xmlns:User="clr-namespace:Hangout.Client.Controls.User" x:Class="Hangout.Client.Controls.Discover.DiscoverItem"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Loaded="UserControl_Loaded">
    
	<StackPanel x:Name="LayoutRoot">
		<Tag:TagItem x:Name="TagItem"/>
		<User:UserListItem x:Name="UserListItem" Width="Auto"/>
	</StackPanel>
</UserControl>