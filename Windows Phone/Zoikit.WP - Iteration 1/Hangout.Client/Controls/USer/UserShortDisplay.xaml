<UserControl x:Class="Hangout.Client.Controls.User.UserShortDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Width="80" Height="80" Tap="LayoutRoot_Tap_1">
        <Canvas x:Name="Front" RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <CompositeTransform/>
            </Canvas.RenderTransform>
            
            <Image x:Name="ProfilePicImg" HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="80" Source="/Hangout.Client;component/icons/Yellow Profile.png" Canvas.ZIndex="1">
                <Image.Clip>
                    <EllipseGeometry Center="40,40" RadiusX="40" RadiusY="40"/>
                </Image.Clip>
            </Image>
        </Canvas>
    </Grid>
    
</UserControl>